<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addfranchise.AddFranchiseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="14dp"
            android:text="Let's fill form for your franchise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/tv_sec_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name Franchise"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_top"
            app:layout_constraintStart_toStartOf="@+id/tv_top"
            app:layout_constraintTop_toBottomOf="@+id/tv_top" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name Franchise"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sec_name"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sec_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="First Branch Address"
            android:layout_marginVertical="7dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_top"
            app:layout_constraintStart_toStartOf="@+id/tv_top"
            app:layout_constraintTop_toBottomOf="@+id/tl_email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sec_address"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sec_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginVertical="7dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_top"
            app:layout_constraintStart_toStartOf="@+id/tv_top"
            app:layout_constraintTop_toBottomOf="@+id/tl_address" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Description"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sec_desc"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sec_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:text="Category"
            app:layout_constraintEnd_toEndOf="@+id/tv_top"
            app:layout_constraintStart_toStartOf="@+id/tv_top"
            app:layout_constraintTop_toBottomOf="@+id/tl_desc" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/choose_car"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Choose category franchise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sec_category"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="7dp">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sec_wa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:text="Whatsapp"
            app:layout_constraintEnd_toEndOf="@+id/tv_top"
            app:layout_constraintStart_toStartOf="@+id/tv_top"
            app:layout_constraintTop_toBottomOf="@+id/choose_car" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_wa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number whatsapp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sec_wa"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_wa"
            android:background="@color/black"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/tv_sec_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Type Franchise"
            app:layout_constraintEnd_toEndOf="@+id/tv_sec_wa"
            app:layout_constraintStart_toStartOf="@+id/tv_sec_wa"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <Button
            android:id="@+id/btn_add_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Add Packet"
            app:layout_constraintEnd_toEndOf="@+id/tv_sec_type"
            app:layout_constraintStart_toStartOf="@+id/tv_sec_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_sec_type"
            app:icon="@drawable/baseline_add_24"/>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_add_type"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/tv_sec_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Image Franchise"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add_img"
            app:layout_constraintStart_toStartOf="@+id/tv_sec_wa"
            app:layout_constraintTop_toTopOf="@+id/btn_add_img" />

        <Button
            android:id="@+id/btn_add_img"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            app:icon="@drawable/baseline_add_24"
            app:layout_constraintEnd_toEndOf="@+id/tv_sec_type"
            app:layout_constraintTop_toBottomOf="@+id/line2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_img"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>